{% extends 'base.html.twig' %}

{% block title %}Voyage + | Plans {% endblock %}

{% block body %}

<div class="grid">
    {% for item in Plan %}
    <div>
        <article id="article">
            <h3>
                {{item.nom}}
            </h3>
            <p>
                {{item.description|raw}}
            </p>
    
            <a href="{{item.paymentLink}}" target="_blank">
                <button>S'abonner</button>
            </a>
        
            <footer>
                <small><em>Par Voyageur+</em></small>
            </footer>
        
          </article>
    </div>
    {% endfor %}
</div>

{% endblock %}